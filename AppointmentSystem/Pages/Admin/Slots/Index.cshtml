@page
@model AppointmentSystem.Pages.Admin.Slots.IndexModel

@{
    ViewData["Title"] = "Приемы";
}

<h1>Приемы</h1>

<p>
    <a asp-page="Create">Создать</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AppointmentSlot[0].Doctor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AppointmentSlot[0].StartTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AppointmentSlot[0].EndTime)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.AppointmentSlot) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Doctor.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndTime)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Редактировать</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Детали</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
