@page
@model AppointmentSystem.Pages.Admin.Slots.CreateModel

@{
    ViewData["Title"] = "Создать";
}

<h1>Создать</h1>

<h4>Прием</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AppointmentSlot.Doctor" class="control-label"></label>
                <select asp-for="AppointmentSlot.DoctorId" asp-items="@Model.Doctors" class="form-control">
                </select>
                <span asp-validation-for="AppointmentSlot.DoctorId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AppointmentSlot.StartTime" class="control-label"></label>
                <input asp-for="AppointmentSlot.StartTime" class="form-control" />
                <span asp-validation-for="AppointmentSlot.StartTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AppointmentSlot.EndTime" class="control-label"></label>
                <input asp-for="AppointmentSlot.EndTime" class="form-control" />
                <span asp-validation-for="AppointmentSlot.EndTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Создать" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Назад к списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
