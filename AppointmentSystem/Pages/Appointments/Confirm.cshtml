@page
@using System.Globalization
@model AppointmentSystem.Pages.Appointments.ConfirmModel
@{
    ViewData["Title"] = "Запись";
    CultureInfo culture = new CultureInfo("ru-RU");
}
<a asp-page="/Appointments/TimeSlots" >
    <span class="btn button-back">
        <img src="~/img/arrow-small.png" />
    </span>
</a>

<h2 class="mb-2">Подтвердить запись</h2>
<div class="card">
    <div class="card-header">
        @Model.Slot.StartTime.ToString("dd MMMM yyyy", culture)
        @Model.Slot.StartTime.ToString("HH:mm")
    </div>
    <div class="card-body">
        <h5 class="card-title">@Model.Slot.Doctor.FullName</h5>
        <p class="card-text">@Model.Slot.Doctor.CategoryName</p>
        <form method="post">
            <input type="hidden" id="TimeSlotId" name="TimeSlotId" value="@Model.TimeSlotId.GetValueOrDefault()" />
            <input type="submit" class="btn btn-primary" value="Записаться" />
        </form>
    </div>
</div>