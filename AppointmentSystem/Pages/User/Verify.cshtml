@page
@using Microsoft.AspNetCore.Http
@model VerifyModel
@{
    ViewData["Title"] = "Аутентификация";
}

<h4>Аутентификация</h4>
<div class="row">
    <div class="col-md-8">
        <form method="post">
            <label for="code">Код подтверждения</label>
            <input type="number" id="code" name="code">
            <div asp-validation-summary="All" class="text-danger" name="code"></div>
            <input type="submit" class="btn btn-primary" value="Подтвердить" />
        </form>
    </div>
</div>
