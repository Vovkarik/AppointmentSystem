@page
@model VerifyModel
@{
    ViewData["Title"] = "Вход";
}
<a asp-page="/Appointments/Login">
    <span class="btn button-back">
        <img src="~/img/arrow-small.png" />
    </span>
</a>

<h4>Вход</h4>
<div class="row">
    <div class="col-md-8">
        <form method="post">
            <input type="hidden" id="ReturnUrl" name="ReturnUrl" value="@Model.ReturnUrl" />
            <label for="code">Код подтверждения</label>
            <input type="number" id="code" name="code">
            <div asp-validation-summary="All" class="text-danger" name="code"></div>
            <input type="submit" class="btn btn-primary" value="Подтвердить" />
        </form>
    </div>
</div>
