@page
@using Microsoft.AspNetCore.Http
@model VerifyModel
@{
    ViewData["Title"] = "Аутентификация";
}

<h4>Аутентификация</h4>
<div class="row">
    <div class="col-md-8">
        <form method="post">
            <label for="phone">Код подтверждения</label>
            <input type="number" id="verification" name="phone">
            <div asp-validation-summary="All" class="text-danger" name="number"></div>
            <p>На этот номер будет выслано СМС с кодом для подтверждения вашей личности</p>
            <input type="submit" class="btn btn-primary" value="Выслать код" />
        </form>
    </div>
</div>
